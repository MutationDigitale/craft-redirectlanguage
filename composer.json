{
  "name": "mutation/redirectlanguage",
  "description": "Redirect homepage to the right language based on browser and cookies",
  "type": "craft-plugin",
  "support": {
    "docs": "https://github.com/MutationDigitale/craft3-redirectlanguage/blob/master/README.md",
    "issues": "https://github.com/MutationDigitale/craft3-redirectlanguage/issues"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Mutation Digitale",
      "homepage": "https://mutation.io/"
    }
  ],
  "require": {
    "php": "^8.0.2",
    "craftcms/cms": "^4.0.0-alpha"
  },
  "autoload": {
    "psr-4": {
      "mutation\\redirectlanguage\\": "src/"
    }
  },
  "extra": {
    "name": "Redirect Language",
    "handle": "redirectlanguage",
    "schemaVersion": "1.0.0",
    "hasCpSettings": false,
    "hasCpSection": false,
    "changelogUrl": "https://raw.githubusercontent.com/MutationDigitale/craft3-redirectlanguage/master/CHANGELOG.md",
    "class": "mutation\\redirectlanguage\\RedirectLanguage"
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true,
      "craftcms/plugin-installer": true
    }
  }
}
